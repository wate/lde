{
  "name": "PHP & MariaDB",
  "dockerComposeFile": "compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "yaml.schemas": {
          "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml"
        },
        "files.associations": {
          "deploy.yml": "ansible",
          "release.yml": "ansible"
        },
        "[markdown]": {
          "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
        },
        "[sql]": {
          "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
        },
        "sql-formatter.dialect": "sql",
        "sql-formatter.uppercase": true
      },
      "extensions": [
        "mikestead.dotenv",
        "EditorConfig.EditorConfig",
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",
        "bierner.github-markdown-preview",
        "shd101wyy.markdown-preview-enhanced",
        "xdebug.php-debug",
        "bmewburn.vscode-intelephense-client",
        "vscode-icons-team.vscode-icons",
        "oderwat.indent-rainbow",
        "hediet.vscode-drawio",
        "redhat.vscode-yaml",
        "redhat.ansible",
        "streetsidesoftware.code-spell-checker",
        "adpyke.vscode-sql-formatter",
        "dbcode.dbcode"
      ]
    }
  },
  "forwardPorts": [
    2222,
    8080,
    8025,
    1025,
    3306
  ],
  "postCreateCommand": "if [ -f .devcontainer/provision/post_create.sh ]; then bash .devcontainer/provision/post_create.sh; fi",
  "postStartCommand": "if [ -f .devcontainer/provision/post_start.sh ]; then bash .devcontainer/provision/post_start.sh; fi",
  "shutdownAction": "stopCompose",
  "remoteUser": "vscode"
}
