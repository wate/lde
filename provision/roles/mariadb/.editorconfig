root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 4

